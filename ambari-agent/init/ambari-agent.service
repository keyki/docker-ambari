[Install]
WantedBy=multi-user.target

[Unit]
Description=Ambari Agent Service
After=network-online.target network.service

[Service]
Type=forking
Restart=no
TimeoutSec=5min
IgnoreSIGPIPE=no
KillMode=process
GuessMainPID=no
RemainAfterExit=yes
Environment="USE_CONSUL_DNS=$USE_CONSUL_DNS"
Environment="AMBARI_SERVER_ADDR=$AMBARI_SERVER_ADDR"
ExecStartPre="/opt/ambari-agent/init-agent.sh
ExecStart=/etc/rc.d/init.d/ambari-agent start
ExecStop=/etc/rc.d/init.d/ambari-agent stop